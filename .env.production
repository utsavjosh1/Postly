# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=postly
DB_USER=postly
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Authentication (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_THIS_TO_32_CHAR_HEX_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_32_CHAR_HEX_SECRET
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google Gemini API
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# URLs (update with your domain)
WEB_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# Environment
NODE_ENV=production
