# ===========================================
# POSTLY ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
#
# LOCAL DEV:   Use localhost for DB_HOST, REDIS_HOST
# DOCKER PROD: Use container names (postgres, redis)

# Environment
NODE_ENV=development

# ===========================================
# DATABASE (PostgreSQL with pgvector)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postly
DB_USER=postgres
DB_PASSWORD=postgres

# ===========================================
# REDIS (Job Queue & Caching)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate secrets with: openssl rand -hex 32
JWT_SECRET=change-this-to-a-secure-random-string
JWT_REFRESH_SECRET=change-this-to-another-secure-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# GOOGLE GEMINI API (Required for AI Chat)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# SERVER URLS
# ===========================================
API_PORT=3000
API_URL=http://localhost:3000
WEB_PORT=3001
WEB_URL=http://localhost:3001

# ===========================================
# OPTIONAL: Discord Bot
# ===========================================
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=

# ===========================================
# OPTIONAL: Reddit Bot
# ===========================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=postly-bot/1.0

# ===========================================
# OPTIONAL: Stripe (Subscriptions)
# ===========================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ===========================================
# OPTIONAL: MinIO (S3-compatible Storage)
# ===========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=postly

DATABASE_URL=