# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postly
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postly

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO Configuration (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=postly-resumes

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string
JWT_REFRESH_EXPIRES_IN=30d

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# API Configuration
API_PORT=3000
API_URL=http://localhost:3000

# Frontend Configuration
WEB_PORT=3001
WEB_URL=http://localhost:3001

# Discord Bot (optional)
DISCORD_BOT_TOKEN=your-discord-bot-token-here
DISCORD_CLIENT_ID=your-discord-client-id-here

# Reddit Bot (optional)
REDDIT_CLIENT_ID=your-reddit-client-id-here
REDDIT_CLIENT_SECRET=your-reddit-client-secret-here
REDDIT_USER_AGENT=postly-bot/1.0

# Stripe (for subscriptions)
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Environment
NODE_ENV=development
